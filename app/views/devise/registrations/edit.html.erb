<section id="edit-user-section">
  <div class="container edit-user-container text-center">
    <h2>Edit <%= resource_name.to_s.humanize %></h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>

      <div class="field row">
        <%= f.label :email, class: "col edit-user-labels" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col input-field" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field row">
        <%= f.label :password, class: "col edit-user-labels" %>
        <%= f.password_field :password, autocomplete: "new-password", class: "col input-field" %>
      </div>

      <div class="field row">
        <%= f.label :password_confirmation, class: "col edit-user-labels" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "col input-field" %>
      </div>

      <div class="field row">
        <%= f.label :current_password, class: "col edit-user-labels" %>
        <%= f.password_field :current_password, autocomplete: "current-password", class: "col input-field" %>
      </div>

      <div class="row action-buttons">
        <p class="col"><%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
        <div class="actions col">
          <%= f.submit "Update" %>
        </div>
      </div>
    <% end %>
    <div class="row">
      <p class="col instructions">Leave password input blank if you don't want to change it</p>
    </div>
    <p class="col"><%= link_to "Back", :back %></p>
  </div>
</section>
