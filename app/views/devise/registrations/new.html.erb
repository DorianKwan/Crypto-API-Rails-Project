<section id="registration-section">
  <div class="container registration-container text-center">
    <h2>Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="field row">
        <%= f.label :email, class: 'col registration-labels' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'input-field col' %>
      </div>

      <div class="field row">
        <div class="col registration-labels">
          <%= f.label :password %>
          <em>(Min 6 chars)</em>
        </div>
        <%= f.password_field :password, autocomplete: "new-password", class: 'input-field col' %>
      </div>

      <div class="field row">
        <%= f.label :password_confirmation, class: 'registration-labels col' %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'input-field col' %>
      </div>

      <div class="row registration-buttons">
        <a class="col" href="/users/sign_in">Already have an account?</a>
        <div class="actions col">
          <%= f.submit "Sign up" %>
        </div>
      </div>
    <% end %>
    
  </div>
</section>
