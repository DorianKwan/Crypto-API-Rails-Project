<section id="login-section">
  <div class="container login-container text-center">
    <h2>Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field row">
        <%= f.label :email, class: 'col login-labels' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'input-field col' %>
      </div>

      <div class="field row">
        <%= f.label :password, class: 'col login-labels' %>
        <%= f.password_field :password, autocomplete: "current-password", class: 'input-field col' %>
      </div>

      <div class="row login-buttons">
      <% if devise_mapping.rememberable? -%>
        <div class="field col">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>

      <div class="actions col">
        <%= f.submit "Log in" %>
      </div>
      </div>
    <% end %>

    <div class="row devise-links">
      <a class="col" href="/users/password/new">Forgot you password?</a>
      <a class="col" href="/users/sign_up">Don't have an account?</a>
    </div>
  </div>
</section>
