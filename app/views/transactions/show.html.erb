<section id="show-transaction-section" class="order-table">
  <div class="container transaction-container">
    <h1 class="transaction-details">Transaction Details:</h2>
    <div class="panel panel-default">

      <% 
        cryptocurrency = @transaction.cryptocurrency
        crypto_name = cryptocurrency.name.humanize
      %>

      <div class="panel-heading">
        <h2 class="text-center"><%= crypto_name %> has been added to your wallet.</h3>
      </div>

      <table class="table table-striped cart-items border">
        <thead class="thead-custom-dark">
          <tr>
            <th>Cryptocurrency</th>
            <th class="text-right">Quantity in Coins</th>
            <th class="text-right"><%= crypto_name %> Purchase Price</th>
            <th class="text-right">Price</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <th><%= @transaction.cryptocurrency.name.humanize %></th>
            <th class="text-center"><%= cryptocurrency.get_char  %> <%= @transaction.amount_of_coin %></th>
            <th class="text-center">$<%= @transaction.crypto_price %></th>
            <th class="text-right">$<%= @transaction.order_total.round(2) %></th>
          </tr>
        </tbody>
        <tfoot>
          <th></th>
          <th></th>
          <th>Order Total:</th>
          <th>$<%= @transaction.order_total.round(2) %></th>
        </tfoot>
      </table>
    </div>
  </div>
</section>